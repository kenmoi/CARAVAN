<div class="container-fluid box-background">
  <div class="row">
    <div class="col-md-12">
      <div class="top-box">
        <h1 class="top-title"></h1>
        <p class=" top-text">
        </p>
      </div>
    </div>
  </div>
</div>

<div class="mx-auto col-md-8 mt-4">
  <h2></h2>
  <div class="container">
    <div class="row">
      <% @items.last(4).each do |item| %>
        <div class="col-md-3">
          <div class="card shadow">
            <%= link_to item_path(item), class: "no-underline", 'data-turbolinks': false do %>
              <%= attachment_image_tag item, :image, :fill, 200, 150, fallback: "no_image.jpg", class: "card-img-top " %>
              <div class="card-body">
                <h6 class="card-title">
                </h6>
                <p class="card-text">
                </p>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="all_item">
    </div>
  </div>
</div>